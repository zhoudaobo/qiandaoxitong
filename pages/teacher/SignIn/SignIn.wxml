<button type="primary" bindtap="takePhoto">签到</button>
</view>
<view class="cu-bar bg-white margin-top">
  <view class="action">
    <text class="cuIcon-title text-blue"></text><view class="section">
  <picker bindchange="bindPickerChange" value="{{week[e.detail.value].week}}" range="{{week}}"  range-key="{{'week'}}">
